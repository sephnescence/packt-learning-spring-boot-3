<h1>Learning Spring Boot 3</h1>

<h2>User Profile</h2>
<ul>
    <li>Username: {{authentication.name}}</li>
    <li>Authorities: {{authentication.authorities}}</li>
</ul>

<form action="/logout" method="post">
    <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">
    <button type="submit">Log out</button>
</form>

<form action="/new-video-entity" method="post">
    <label for="name">
        Video Entity Name
        <input name="name" type="text" placeholder="Enter a video entity name" />
    </label>
    <label for="description">
        Video Entity Description
        <input name="description" type="text" placeholder="Enter a video entity description" />
    </label>
    <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">
    <button type="submit">Add Video Entity</button>
</form>

<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Username</th>
    </tr>
    {{#videoEntities}}
        <tr>
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td>{{username}}</td>
            <td>
                <form action="/delete-video-entity/{{id}}" method="post">
                    <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}" />
                    <button type="submit">Delete Video Entity</button>
                </form>
            </td>
        </tr>
    {{/videoEntities}}
</table>

<hr />

<form action="/multi-field-search" method="post">
    <label for="name">
        Video Entity Name
        <input name="name" type="text" placeholder="Video Entity Name" />
    </label>


    <label for="description">
        Video Entity Description
        <input name="description" type="text" placeholder="Video Entity Description" />
    </label>

    <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">
    <button type="submit">Search Video Entities</button>
</form>